{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcom to our store"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}

<section>
  <div>
    <img
      src="{{ section.settings.hero_image | image_url: 'large' | default: 'https://placehold.co/600x400' }}"
      alt="Hero Image"
      width="600"
      height="400"
    >
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading | default: 'Subheading' }}</p>
  </div>
</section>
